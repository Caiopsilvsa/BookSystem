@model BookSystem.ViewModels.EditLivroViewModel

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar</h1>

<h4>Livro</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Livro.ID" />
            <div class="form-group">
                <label asp-for="Livro.Titulo" class="control-label"></label>
                <input asp-for="Livro.Titulo" class="form-control" />
                <span asp-validation-for="Livro.Titulo" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <select asp-for="AutorEscolhido" asp-items="@Model.Autores">
                    <option value="">Autor</option>
                </select>
            </div>
            <div class="form-group">
                <select asp-for="CategoriaEscolhida" asp-items="@Model.Categorias">
                    <option value="">Categoria</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Livro.Preco" class="control-label"></label>
                <input asp-for="Livro.Preco" class="form-control" />
                <span asp-validation-for="Livro.Preco" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Livro.Quantidade" class="control-label"></label>
                <input asp-for="Livro.Quantidade" class="form-control" />
                <span asp-validation-for="Livro.Quantidade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
